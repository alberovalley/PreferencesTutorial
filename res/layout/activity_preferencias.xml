<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    
    <EditText
        android:id="@+id/mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensaje_defecto"
        tools:context=".Preferencias"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" 
        />
    <LinearLayout android:orientation="horizontal"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:weightSum="1">
	    <CheckBox android:id="@+id/check"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:checked="false"
	        />
	    <TextView
        android:id="@+id/textocheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textocheck"
        tools:context=".Preferencias"
        
        />
    </LinearLayout>
	<LinearLayout android:orientation="horizontal"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:weightSum="1">
	    <AutoCompleteTextView 
        android:id="@+id/selector"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:completionThreshold="1"
        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
        android:textColor="#000"
        />
	    <Button 
	        android:id="@+id/meteotro"
	        android:text="+"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.9"
	        />
	</LinearLayout>
	<Button 
	        android:id="@+id/borralista"
	        android:text="Borrar lista"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
	        />  
    <ListView 
        android:id="@+id/lista_contactos"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    
 	  
    

</LinearLayout>
